# ========================================
# SERENIA - Environment Variables Template
# ========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ========================================
# 1. APPLICATION INFO
# ========================================
APP_VERSION=latest
QUARKUS_APPLICATION_NAME=Serenia
QUARKUS_HTTP_PORT=8080

# ========================================
# 2. DATABASE CONFIGURATION
# ========================================
POSTGRES_DB=serenia
POSTGRES_USER=serenia
# REQUIRED: Set a strong password for production
POSTGRES_PASSWORD=your_secure_database_password_here
QUARKUS_DATASOURCE_JDBC_URL=jdbc:postgresql://postgres:5432/serenia
QUARKUS_DATASOURCE_USERNAME=serenia
QUARKUS_DATASOURCE_PASSWORD=your_secure_database_password_here

# ========================================
# 4. HTTP & CORS CONFIGURATION
# ========================================
CORS_ENABLED=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
# For production, set to your domain
CORS_ORIGINS=http://localhost:80
CORS_ACCESS_CONTROL_ALLOW_CREDENTIALS=true
CORS_ACCESS_CONTROL_ALLOW_HEADERS=Content-Type,Authorization,X-Requested-With,Origin,Accept
CORS_ACCESS_CONTROL_EXPOSE_HEADERS=Authorization

# ========================================
# 5. JWT SECURITY
# ========================================
MP_JWT_VERIFY_PUBLICKEY_LOCATION=/keys/publicKey.pem
SMALLRYE_JWT_SIGN_KEY_LOCATION=/keys/privateKey.pem
JWT_KEY_ID=1

# ========================================
# 6. SERENIA AUTHENTICATION
# ========================================
SERENIA_AUTH_JWT_ISSUER=serenia
# Token expiration in seconds (default: 1 hour)
SERENIA_AUTH_EXPIRATION_TIME=3600
# Maximum users allowed
SERENIA_AUTH_MAX_USERS=200

# ========================================
# 7. SERENIA TOKEN QUOTAS
# ========================================
SERENIA_TOKENS_INPUT_LIMIT_DEFAULT=100000
SERENIA_TOKENS_OUTPUT_LIMIT_DEFAULT=100000
SERENIA_TOKENS_TOTAL_LIMIT_DEFAULT=200000

# ========================================
# 8. SERENIA SECURITY
# ========================================
# REQUIRED: Set a strong secret key for encryption (minimum 32 characters)
SERENIA_SECURITY_KEY=your_strong_security_key_here_minimum_32_characters

# ========================================
# 9. SERENIA EMAIL VERIFICATION
# ========================================
# Email verification token expiration in minutes (default: 24 hours)
SERENIA_EMAIL_VERIFICATION_TOKEN_EXPIRATION_MINUTES=1440

# ========================================
# 10. SERENIA INTERNAL CONFIGURATION
# ========================================
SERENIA_SYSTEM_PROMPT="Tu es Serenia, une presence chaleureuse, empathique et profondement humaine."
SERENIA_URL=http://backend:8080
SERENIA_FRONT_URL=http://localhost:80

# ========================================
# 11. OPENAI INTEGRATION
# ========================================
# REQUIRED: Your OpenAI API key
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# ========================================
# 12. EMAIL CONFIGURATION (Quarkus Mailer)
# ========================================
QUARKUS_MAILER_FROM=noreply@serenia.local
QUARKUS_MAILER_HOST=mailpit
QUARKUS_MAILER_PORT=1025
QUARKUS_MAILER_SSL=false
QUARKUS_MAILER_START_TLS=DISABLED
QUARKUS_MAILER_MOCK=false

# ========================================
# 13. LOGGING CONFIGURATION
# ========================================
# Options: TRACE, DEBUG, INFO, WARN, ERROR
QUARKUS_LOG_LEVEL=INFO

# ========================================
# 14. DOCKER PORTS
# ========================================
FRONTEND_PORT=80
MAILPIT_WEB_PORT=8025
